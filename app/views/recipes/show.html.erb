<div class="recipe-show">
  <div class="recipe-box">
    <h2 class="name">
      <%= @recipe.title %>
    </h2>

    <%= @recipe.user.nickname %>

    <% if user_signed_in? %>
      <% if current_user == @recipe.user %>
        <%= link_to "レシピ編集", edit_recipe_path(@recipe.id), method: :get, class: "recipe-edit" %>
        <%= link_to "レシピ削除", recipe_path(@recipe.id), method: :delete, class:"recipe-destroy" %>
      <% end %>
    <% end %>

    <div class="recipe-img-content">
      <%= image_tag @recipe.image ,class:"recipe-box-img" %>
    </div>
    <div class="recipe-show-box">
      <div class="item-ingredient">
        <%= @recipe.ingredient %>
      </div>
      <div class="recipe-explanation">
        <%= @recipe.explanation %>
      </div>

      <table class="detail-table">
        <tbody>
          <tr>
            <th class="detail-item">調理時間</th>
            <td class="detail-value"><%= @recipe.time_required.name %></td>
          </tr>
          <tr>
            <th class="detail-item">何人分</th>
            <td class="detail-value"><%= @recipe.number_of_people.name %></td>
          </tr>
          <tr>
            <th class="detail-item">カテゴリー</th>
            <td class="detail-value"><%= @recipe.category.name %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <%= link_to "トップページに戻る", root_path, class:"recipe-top"%>
</div>