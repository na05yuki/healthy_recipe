<header class='top-page-header'>
  <div class='main_title'>
    <%= link_to image_tag("healthyrecipe_logo200.gif", class:"icon"), root_path %>
    <h1 class="header_title">healthy recipe</h1>
  </div>

  <div class='nav'>
    <ul class='user-lists'>
      <% if user_signed_in? %>
        <li><%= link_to "#{current_user.nickname}", edit_user_registration_path, class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to "ログイン", new_user_session_path, class: "login" %></li>
        <li><%= link_to "新規登録", new_user_registration_path, class: "sing-up" %></li>
      <% end %>
    </ul>
  </div>
</header>